{

	"manifest_version": 2,
	"name": "RateMyOSUProfessor",
	"version": "1.0.0.0",

	"description": "View RateMyOSUProfessors ratings directly on the course search page.",
	"icons": {
		 "16": "icon.png", 
		 "48": "icon.png", 
		 "128": "icon.png" 
		},

	"author": "Greg Garcia",
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"content_scripts": [
	{
		"matches": ["https://classes.osu.edu/class-search/*"],
		"css": ["style.css"],
		"js": ["content.js"]
	}
	],

	"page_action": {
  		"default_icon": "icon.png"
  	}, 

	"permissions": [
		"http://www.ratemyprofessors.com/*",
		"tabs"
	],

	"web_accessible_resources": [
		"http://www.ratemyprofessors.com/*"
	]

}