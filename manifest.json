{
	// Required
	"manifest_version": 2,
	"name": "Ohio State Rate My Professor Extension - Course Search Page",
	"version": "1.0.0.0",

	// Recommended
	//"default_locale": "en",
	"description": "An extensin that allows user to view RateMyProfessors.com information for each Professor listed on course search page.",
	"browser_action": {
		"default_icon": "icon.png"
	},
	"icons": {
		"16": "icon.png"
		},

	"author": "Greg Garcia",
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"content_scripts": [
	{
		"matches": ["https://classes.osu.edu/class-search/*"],
		"css": ["style.css"],
		"js": ["content.js"]
	}
	],

	"permissions": [
		"http://www.ratemyprofessors.com/*",
		"tabs"
	],

	"web_accessible_resources": [
		"http://www.ratemyprofessors.com/*"
	]

}